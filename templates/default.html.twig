{% extends 'partials/base.html.twig' %}

{% block content %}
	<div class="col-sm-12">
		{{ page.content }}
	</div>
{% endblock %}

{# List 3 latest childpages of /home as posts #}
{% block latestPosts %}
	<div class="col-sm-12">
		
		{% for post in page.find('/home').children.order('date', 'desc').slice(0, 3) %}
			
			<h2>{{ post.title }}</h2>
			{% if post.summary %}
				{{ post.summary(200) }}
			{% else %}
				<em>No summary available</em>
			{% endif %}
		{% endfor %}

	</div>
{% endblock %}