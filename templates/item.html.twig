{% extends 'partials/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-sm-12">
                    <h1>{{ page.title }}</h1>
                    {{ page.content }}
                    {% if page.header.featured_image %}
                        <div class="row">
                            <div class="col-sm-4">
                                <img class="img-responsive" src="{{ page.url }}/{{ page.header.featured_image }}">
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
